<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#EDF1D6"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/profileheader">
        <ImageButton android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backicon"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_toEndOf="@id/backBtn"
            android:layout_centerVertical="true"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView android:id="@+id/outletName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Outlet Name"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="24sp"/>
        <TextView android:id="@+id/outletEmail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Outlet Name"
            android:textColor="@color/mainColor"
            android:textStyle="italic"
            android:textSize="20sp"/>
        <TextView android:id="@+id/outletUid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Outlet Name"
            android:textColor="@color/mainColor"
            android:textSize="14sp"/>
        <RelativeLayout android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/logoutbtnbg"
            android:layout_marginTop="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="12sp"
                android:textColor="@color/secondaryColor"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:id="@+id/mottoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="310dp"
                android:text="Save the planet, one waste at a time"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/mainColor"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/wastewiseIcon"/>
            <ImageView android:id="@+id/wastewiseIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/wastewiseicon"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/estTv"
                android:layout_margin="10dp"/>
            <TextView android:id="@+id/estTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EST.2025"
                android:textColor="@color/mainColor"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>